<%- include('../partials/header') %>
<div class="container">
  <h2>Recipe Details</h2>

  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <div class="section">
        <h3>Title:</h3>
        <div><%= recipe.title %></div>
      </div>
      <div class="section">
        <div>Description:</div>
        <div><%= recipe.description %></div>
      </div>
      <div class="section">
        <div>Ingredients:</div>
        <div><%= recipe.ingredients %></div>
      </div>
      <div class="section">
        <div>Instructions:</div>
        <div><%= recipe.instructions %></div>
      </div>
    </div>
  </div>

  <% if (recipe.owner._id.equals(user && user._id)) { %>
  <a class="btn" href="/recipes/<%= recipe._id %>/edit">Edit Recipe</a>
  <% } %>

  <br /><br />

  <div class="card blue-grey darken-1">
    <div class="card-content white-text">
      <h4>Comments</h4>
      <div class="input-field col s12">
        <form
          id="add-comment-form"
          method="POST"
          action="/recipes/<%= recipe._id %>/comments"
        >
          <label>Comments:</label>
          <textarea
            name="content"
            id="textarea1"
            class="materialize-textarea"
          ></textarea>
          <button type="submit" class="btn">Add Comment</button>
        </form>
        <% if (recipe.comments.length) { %>
        <table>
          <thead>
            <tr>
              <th>Username</th>
              <th>Comment</th>
            </tr>
          </thead>
          <tbody>
            <% recipe.comments.forEach(function(c) { %>
            <tr>
              <td>
                <% if (c.user) { %>
                <i class="material-icons">account_circle</i><%= c.user.name %>
                <% } else { %> Anonymous <% } %>
              </td>
              <td><%= c.content %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <h5>No Comments Yet</h5>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>
